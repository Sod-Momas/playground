<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>cc.momas</groupId>
    <artifactId>playground</artifactId>
    <version>1.0</version>

    <modules>
        <module>playground-apache-activemq</module>
        <module>playground-apache-commons</module>
        <module>playground-apache-dubbo</module>
        <module>playground-apache-freemarker</module>
        <module>playground-apache-hc</module>
        <module>playground-apache-shiro</module>
        <module>playground-apache-struts2</module>
        <module>playground-apache-tomcat</module>
        <module>playground-apache-velocity</module>
        <module>playground-caffeine</module>
        <module>playground-disruptor</module>
        <module>playground-dlock</module>
        <module>playground-docker</module>
        <module>playground-easyexcel</module>
        <module>playground-hexdump</module>
        <module>playground-javase</module>
        <module>playground-jersey</module>
        <module>playground-jol</module>
        <module>playground-javaee</module>
        <module>playground-log</module>
        <module>playground-mybatis-plus</module>
        <module>playground-netty</module>
        <module>playground-okhttp</module>
        <module>playground-quartz</module>
        <module>playground-reactor</module>
        <module>playground-spring-batch</module>
        <module>playground-spring-boot</module>
        <module>playground-spring-cloud-alibaba</module>
        <module>playground-spring-cloud-netflix</module>
        <module>playground-spring-cloud-pivotal</module>
        <module>playground-spring-data</module>
        <module>playground-spring-framework</module>
        <module>playground-spring-shell</module>
        <module>playground-sql</module>
        <module>playground-webjars</module>
    </modules>
    <packaging>pom</packaging>
    <properties>
        <maven.compiler.source>11</maven.compiler.source>
        <maven.compiler.target>11</maven.compiler.target>
        <maven.compiler.encoding>UTF-8</maven.compiler.encoding>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
        <junit.version>4.13.1</junit.version>
    </properties>
    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>junit</groupId>
                <artifactId>junit</artifactId>
                <version>${junit.version}</version>
                <scope>test</scope>
            </dependency>
        </dependencies>
    </dependencyManagement>
    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <!-- 用于打包war包的插件 -->
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-war-plugin</artifactId>
                    <version>3.3.2</version>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>
</project>